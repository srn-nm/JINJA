    {% set NO_DATA = "<span style='font-size:12;color:gray;'>اطلاعات ناموجود</span>" %}

    

    {% macro recursive_loop(counter, stars, limit) %}
        {% if counter < limit %}
            {%if counter < stars %}
                <span class="filled">★</span>
                {{ recursive_loop(counter + 1, stars, limit) }}
            {%else%}
                <span>★</span>
                {{ recursive_loop(counter + 1, stars, limit) }}
            {%endif%}
        {% endif %}
    {% endmacro %}

</head>
<body>
    <table>

        <colgroup>
            <col style="width:25%">
            <col style="width:25%">
            <col style="width:25%">
            <col style="width:25%">
        </colgroup>
        
        <tr>
            <td colspan="5">جزئیات سوانح براساس دسته بندی</td>
        </tr>

        <tr>
            <td style="background-color: #e9e6e6;">دسته بندی</td>
            <td style="background-color: #e9e6e6;">تعداد سوانح</td>
            <td style="background-color: #e9e6e6;">میانگین درجه ریسک</td>
            <td style="background-color: #e9e6e6;">نوع سانحه</td> {# نمودار #}
            
        </tr>

        {%for category in data | selectattr("CAUSE", "defined") | map(attribute="CAUSE") | map(attribute="0") | map(attribute="LABEL") | unique | list %}
            
                {# تعاریف متغیر های استفاده شده برای انجام محاسبات #}
                {%set count = namespace(sum=0)%}
                {%set level = namespace(sum=0)%}
                {%set type0 = namespace(sum=0)%}
                {%set type1 = namespace(sum=0)%}
                {%set type2 = namespace(sum=0)%}

                {# در فور پایین محاسبات انجام میشود #}
                {%for incident in data%}
                    {%if incident.CAUSE%}
                        {%if incident.CAUSE[0].LABEL == category%}  
            
                            {% set count.sum = count.sum + 1 %} {# شمارش تعداد سانحه ها #}
                        
                            {%if incident.LEVEL%}
                                {% set level.sum = level.sum + incident.LEVEL %} {# مجموع درجه ریسک ها که باید در نهایت تقسیم بر تعداد کل هشدار ها بشود تا میانگین درجه ریسک به دست آید #}
                            {%endif%}

                            {%if incident.TYPE[0] == 0 %} {# نوع سانحه حادثه انسانی #}
                                {% set type0.sum = type0.sum + 1 %}
                            {%elif incident.TYPE[0] == 1 %} {# نوع سانحه شبه حادثه #}
                                {% set type1.sum = type1.sum + 1 %}
                            {%elif incident.TYPE[0] == 2%} {# نوع سانحه حادثه زیست محیطی #}
                                {% set type2.sum = type2.sum + 1 %}
                            {%endif%}

                        {%endif%}
                    {%endif%}
                {%endfor%}

            {%if count.sum != 0 %}
            <tr>
                <td style="background-color: #e9e6e6;">
                    {{category}}
                </td>

                <td>{{count.sum}}</td>

                {%if count.sum == 0%}
                    <td>No DATA</td>
                {%else%}
                    <td >
                        <div class="stars">
                            {{recursive_loop(0, (level.sum / count.sum) | int , 5)}}
                        </div>
                    </td>
                {%endif%}

                <td>
                    <div class="chart">
                        <div class="bar" style="height: {{type0.sum / (type0.sum + type1.sum + type2.sum) * 100}}%;">
                            <div style="color:black;">{{(type0.sum / (type0.sum + type1.sum + type2.sum) * 100) | int}}%</div>
                            <span class="bar-label">حادثه انسانی</span>
                        </div>
                        <div class="bar" style="height: {{type1.sum / (type0.sum + type1.sum + type2.sum) * 100}}%;">
                            <div style="color:black;">{{(type1.sum / (type0.sum + type1.sum + type2.sum) * 100) | int}}%</div>
                            <span class="bar-label">شبه حادثه</span>
                        </div>
                        <div class="bar" style="height: {{type2.sum / (type0.sum + type1.sum + type2.sum) * 100}}%;">
                            <div style="color:black;">{{(type2.sum / (type0.sum + type1.sum + type2.sum) * 100) | int}}%</div>
                            <span class="bar-label">حادثه زیست محیطی</span>
                        </div>
                    </div>
                </td> {# نمودار #}

            </tr>
            {%endif%}
        {%endfor%}
    </table>
</body>
</html>




