                {%if count.sum == 0%}
                    <td>No DATA</td>
                {%else%}
                    <td >
                        <div class="stars">
                            {{recursive_loop(0, (level.sum / count.sum) | int , 5)}}
                        </div>
                    </td>
                {%endif%}

