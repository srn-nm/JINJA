        {%for category in ENUM_CATEGORY %}
            
                {# تعاریف متغیر های استفاده شده برای انجام محاسبات #}
                {%set count = namespace(sum=0)%}
                {%set level = namespace(sum=0)%}
                {%set type0 = namespace(sum=0)%}
                {%set type1 = namespace(sum=0)%}
                {%set type2 = namespace(sum=0)%}

                {# در فور پایین محاسبات انجام میشود #}
                {%for incident in data%}
                    {%if incident.ITEM is not null%}
                        {%if incident.ITEM[0].CATEGORY[0] == category.value%}  
            
                            {% set count.sum = count.sum + 1 %} {# شمارش تعداد سانحه ها #}
                            {% set level.sum = level.sum + incident.LEVEL %} {# مجموع درجه ریسک ها که باید در نهایت تقسیم بر تعداد کل هشدار ها بشود تا میانگین درجه ریسک به دست آید #}
                            
                            {%if incident.TYPE[0] == 0 %} {# نوع سانحه حادثه انسانی #}
                                {% set type0.sum = type0.sum + 1 %}
                            {%elif incident.TYPE[0] == 1 %} {# نوع سانحه شبه حادثه #}
                                {% set type1.sum = type1.sum + 1 %}
                            {%elif incident.TYPE[0] == 2%} {# نوع سانحه حادثه زیست محیطی #}
                                {% set type2.sum = type2.sum + 1 %}
                            {%endif%}

                        {%endif%}
                    {%endif%}
                {%endfor%}

            {%if count.sum != 0 %}
            <tr>
                <td style="background-color: #e9e6e6;">
                    {{category.label}}
                </td>

